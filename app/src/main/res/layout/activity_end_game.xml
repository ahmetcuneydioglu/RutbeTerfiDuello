<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".Highest_Score" >

    <LinearLayout
        android:id="@+id/ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center" >
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/main_color_500"
        android:gravity="center"
        android:text="Durum"
        android:textColor="@color/White"
        android:textSize="30dp"
        android:visibility="visible" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtresult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="Sen Kazandın"
                android:textColor="@color/White"
                android:textSize="28dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txtmyscore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_margin="10dp"
                        android:background="@drawable/score_board"
                        android:gravity="center"
                        android:text="15"
                        android:textColor="@color/Black"
                        android:textSize="28dp" />

                    <TextView
                        android:id="@+id/txtmyname"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="Puanınız"
                        android:textColor="@color/White"
                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txtoppscore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_margin="10dp"
                        android:background="@drawable/score_board"
                        android:gravity="center"
                        android:text="15"
                        android:textColor="@color/Black"
                        android:textSize="28dp" />

                    <TextView
                        android:id="@+id/txtoppname"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="Puanınız"
                        android:textColor="@color/White"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>
            
              <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal" >

            <terfi.quiz.challenge.view.FontelloTextView
                android:id="@+id/btnMainMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/drawer_icon_home"
             android:textSize="28dp"
                android:background="@drawable/avatar"
                android:gravity="center"
                android:padding="18dp"
                android:textColor="@color/White" />

            <terfi.quiz.challenge.view.FontelloTextView
                android:id="@+id/btnHighestscore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
             android:text="@string/drawer_icon_leaderboard"
             android:textSize="28dp"
                android:background="@drawable/avatar"
                android:padding="18dp"
                android:textColor="@color/White" />

            <terfi.quiz.challenge.view.FontelloTextView
                android:id="@+id/btnShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
            android:text="@string/drawer_icon_share"
             android:textSize="28dp"
                android:background="@drawable/avatar"
                android:padding="18dp"
                android:textColor="@color/White" />
            
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>